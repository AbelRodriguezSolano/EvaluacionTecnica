@model IEnumerable<EvaluacionTecnica.Application.DTOs.UserDto>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Usuario
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filtros de Búsqueda
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Buscar (Nombre, Apellido, Usuario)</label>
                        <input type="text" name="SearchText" class="form-control" value="@ViewBag.Filter.SearchText" placeholder="Buscar...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Rol</label>
                        <select name="RoleId" class="form-select">
                            <option value="">Todos los roles</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.Value" selected="@(role.Selected ? "selected" : null)">@role.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cédula</label>
                        <input type="text" name="Cedula" class="form-control" value="@ViewBag.Filter.Cedula" placeholder="Buscar por cédula...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Ordenar por</label>
                        <select name="OrderBy" class="form-select">
                            <option value="">Por defecto</option>
                            <option value="nombre" selected="@(ViewBag.Filter.OrderBy == "nombre" ? "selected" : null)">Nombre A-Z</option>
                            <option value="apellido" selected="@(ViewBag.Filter.OrderBy == "apellido" ? "selected" : null)">Apellido A-Z</option>
                            <option value="fecha_nacimiento" selected="@(ViewBag.Filter.OrderBy == "fecha_nacimiento" ? "selected" : null)">Fecha Nac. ↑</option>
                            <option value="fecha_nacimiento_desc" selected="@(ViewBag.Filter.OrderBy == "fecha_nacimiento_desc" ? "selected" : null)">Fecha Nac. ↓</option>
                        </select>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <div class="col-md-4">
                        <label class="form-label">Fecha Nacimiento Desde</label>
                        <input type="date" name="FechaNacimientoDesde" class="form-control" value="@ViewBag.Filter.FechaNacimientoDesde?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fecha Nacimiento Hasta</label>
                        <input type="date" name="FechaNacimientoHasta" class="form-control" value="@ViewBag.Filter.FechaNacimientoHasta?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="d-none d-lg-table-cell">ID</th>
                            <th>Nombre Completo</th>
                            <th class="d-none d-md-table-cell">Cédula</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th class="d-none d-xl-table-cell">Fecha Nacimiento</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="d-none d-lg-table-cell">
                                    <small class="text-muted">@item.Id</small>
                                </td>
                                <td>
                                    <strong>@item.Nombre @item.Apellido</strong>
                                    <br class="d-md-none">
                                    <small class="text-muted d-md-none">@item.Cedula</small>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @item.Cedula
                                </td>
                                <td>
                                    @item.Usuario_Nombre
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.RoleName</span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.Fecha_Nacimiento.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
